<!DOCTYPE html>
<html>

<head>
  <!-- Make site responsive on mobile/tablet -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- AXIOS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js"></script>
  <!-- Google Font  -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;500;900&display=swap" rel="stylesheet">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <!-- fontawesome CSS -->
  <script src="https://kit.fontawesome.com/8b4a01720d.js"></script>
  <!-- Custom CSS -->


  <link rel='stylesheet' href='/stylesheets/main.css'>

  <title>Moviest</title>

</head>

<body>


  <nav id="mainNavbar" class="navbar navbar-dark navbar-expand-md py-0 fixed-top">
    <a href="/main" class="navbar-brand">MOVIEST</a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navLinks" aria-label="toggle-navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navLinks">
      <ul class="nav navbar-nav">
        <li><a href="/movies" class="nav-link"><strong>Search and write a review</strong></a></li>
      </ul>

      <ul class="nav navbar-nav ml-auto">
        <% if(!currentUser){ %>
        <li><a href="/login" class="nav-link"> <i class="fas fa-sign-in-alt"></i> LOGIN
          </a></li>
        <li><a href="/register" class="nav-link"> <i class="fas fa-user-plus"></i> SIGNUP
          </a></li>
      </ul>


      <% } else { %>
      <li><a href="#" class="nav-link"> <i class="fas fa-meh-blank"></i> Welcome, <%= currentUser.username %>
        </a></li>
      <li><a href="/logout" class="nav-link"> <i class="fas fa-sign-out-alt"></i> LOGOUT
        </a></li>
      </ul>
      <%
				}
			%>
    </div>
  </nav>

  <div class='container'>
    <% if(error && error.length>0) { %>
    <div class='alert alert-danger' role='alert'>
      <%= error %>
    </div>
    <% } %>
    <% if(success && success.length>0) { %>
    <div class='alert alert-success' role='alert'>
      <%= success %>
    </div>
    <% } %>
  </div>