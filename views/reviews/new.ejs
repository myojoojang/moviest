<%- include("../partials/header") %>

<div class="container postBox">
  <div class="back my-5">
    <h1 style="text-align: center">New Review of <%= movie.name %></h1>
    <hr>

    <form action="/movies/<%= movie._id %>/reviews" method="POST">
      <div class="form-group">
        <label for="rating">Leave a rating:</label>
        <input type="number" class="form-control comment-box" id="basic-url" aria-describedby="basic-addon3"
          name='review[rating]' min='0.5' step='0.5' max='5.0'>
      </div>
      <div class="form-group">
        <textarea class="form-control comment-box" type="text" name="review[text]"
          placeholder="Write a review for this movie" rows="3"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/movies/<%= movie._id %>">Go Back</a>

  </div>
</div>
<%- include("../partials/footer") %>