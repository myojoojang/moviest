<%- include('../partials/header') %>

<div class="container writeform">

	<div id="autocomplete"></div>



	<form method="POST" action="/movies" class=" text-center">
		<div id="summary"></div>


		<div class="input-group mb-3 mt-4">
			<div class="input-group-prepend">
				<span class="input-group-text" id="basic-addon3">Your Rating</span>
			</div>
			<input type="number" class="form-control" id="basic-url" aria-describedby="basic-addon3" name='u_rating' min='0.5'
				step='0.5' max='5.0'>
		</div>
		<div class="form-group">
			<div class="input-group-prepend">
				<span class="input-group-text p-3" id="basic-addon3">Leave Your Review</span>
			</div>
			<textarea class="form-control" name='description' rows="3"></textarea>
		</div>


		<div class='form-group row'>
			<div class="col-6"></div>
			<button class='col-6 btn btn-default btn-primary btn-block'>Submit!</button>
		</div>
	</form>
	<a class="col-6 text-white text-right" href='/movies'>Go Back to the List</a>

</div>
<%- include("../partials/footer") %>