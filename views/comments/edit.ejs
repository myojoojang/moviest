<%- include('../partials/header') %>
<div class='container postBox'>


	<div class="back my-5">
		<h5 style='text-align:center;'>Edit Comment</h5>
		<hr>
		<form action='/movies/<%= movie_id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>

			<div class='form-group'>
				<input class='form-control  comment-box' type='text' name='comment[text]' value='<%= comment.text %>'>
			</div>

			<div class='form-group'>
				<button class='btn btn-lg btn-block'>Submit!</button>
			</div>

		</form>
		<a href='/movies'>Go Back</a>
	</div>
</div>

<%- include("../partials/footer") %>